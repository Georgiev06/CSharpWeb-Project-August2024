@using Microsoft.AspNetCore.Identity
@using OnlineCoachingApp.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<link rel="stylesheet" href="~/css/shopping-cart-logo.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span class="link-text">Hello @User.Identity?.Name!</span></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout-btn" type="submit" class="nav-link btn btn-link"><span class="link-text">Logout</span></button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link"><i id="shopping-card" class="fas fa-shopping-cart"></i></a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register"><span class="link-text">Register</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><span class="link-text">Login</span></a>
        </li>
    }
</ul>

